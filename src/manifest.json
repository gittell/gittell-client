{
  "name": "meetell",
  "version": "0.0.1",
  "description": "Broadcast what you are seeing in tech repository / questions",
  "manifest_version": 2,
  "icons": { "128": "images/icons/icon_128.png" },
  "browser_action": {
    "default_icon": "images/icons/icon_19.png",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": false,
    "scripts": [ "js/background-main.js" ]
  },
  "content_scripts": [{
    "matches": [ "http://*/*", "https://*/*" ],
    "js": [ "js/observe-main.js" ]
  }],
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "alarms",
    "identity"
  ],
  "plugins": []
}
